<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/roominfo_bg"
    android:orientation="vertical"
    tools:context=".activity.RoomInfoActivity">

    <com.lwt.qmqiu.widget.BarView
        android:id="@+id/roominfo_barview"
        android:layout_width="match_parent"
        android:layout_height="40dp">

    </com.lwt.qmqiu.widget.BarView>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_margin="12dp"
            android:text="@string/active_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/recycleview_roomuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            >

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <com.lwt.qmqiu.widget.ShowListView
        android:id="@+id/room_name"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.lwt.qmqiu.widget.ShowListView>
    <com.lwt.qmqiu.widget.ShowListView
        android:id="@+id/room_number"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.lwt.qmqiu.widget.ShowListView>
    <com.lwt.qmqiu.widget.ShowListView
        android:id="@+id/room_time"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.lwt.qmqiu.widget.ShowListView>
    <com.lwt.qmqiu.widget.ShowListView
        app:show_line="false"
        android:id="@+id/room_creat"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.lwt.qmqiu.widget.ShowListView>


    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:text="删除并退出"
        android:id="@+id/room_exit"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_20dp_16"
        app:spinning_bar_width="4dp"
        app:spinning_bar_color="@color/white"
        app:spinning_bar_padding="6dp" >

    </br.com.simplepass.loading_button_lib.customViews.CircularProgressButton>


</LinearLayout>